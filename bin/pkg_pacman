#!/bin/bash
set -euo pipefail
IFS=$'\n\t'

if [ "$1" ]; then
  case "$1" in
    i)        pacman -S "$2" ;;
    si)  doas pacman -S "$2" ;;
    r)        pacman -R "$2" ;;
    sr)  doas pacman -R "$2" ;;
    up)       pacman -Syu    ;;
	sup) doas pacman -Syu    ;;
    *)  echo "unknown command" ;;
  esac
else
  echo "Please specify command"
fi
