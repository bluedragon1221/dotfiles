#!/bin/bash

set -euo pipefail
IFS=$'\n\t'

#sudo=sudo
sudo=doas

if [ "$1" ]; then
  case "$1" in
    i)         pacman -S "$2" ;;
    si)  $sudo pacman -S "$2" ;;
    r)         pacman -R "$2" ;;
    sr)  $sudo pacman -R "$2" ;;
    up)        pacman -Syu  ;;
	sup) $sudo pacman -Syu  ;;
    *)  echo "unknown command" ;;
  esac
else
  echo "Please specify command"
fi
