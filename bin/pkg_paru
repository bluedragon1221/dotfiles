#!/bin/bash

# vim: set tabwith=4
set -euo pipefail
IFS=$'\n\t'

if [ "$1" ]; then
    case "$1" in
        i)   paru -S "$2" ;;
        si)  paru -S "$2" ;;
        r)   paru -R "$2" ;;
        sr)  paru -R "$2" ;;
        up)  paru         ;;
        sup) paru         ;;
        sc) for i in $(pacman -Qdtq); do sudo pacman -Rsn $i; done ;;
        *)  echo "unknown command '$1'" ;;
    esac
else
    echo "Please specify command"
fi
