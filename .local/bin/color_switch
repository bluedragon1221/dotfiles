#!/bin/bash

# Alacritty
ALACRITTY_DIR=~/.config/alacritty

[[ -d $ALACRITTY_DIR ]] || echo "Cannot find alacritty config"

case "$(readlink $ALACRITTY_DIR/alacritty.yml)" in
    *nord.yml) rm $ALACRITTY_DIR/alacritty.yml; ln -sf $ALACRITTY_DIR/tokyonight.yml $ALACRITTY_DIR/alacritty.yml ;;
    *tokyonight.yml) rm $ALACRITTY_DIR/alacritty.yml; ln -sf $ALACRITTY_DIR/nord.yml $ALACRITTY_DIR/alacritty.yml ;;
esac

# Waybar
WAYBAR_DIR=~/.config/waybar/colors

[[ -d $WAYBAR_DIR ]] || echo "Cannot find waybar config"

case "$(readlink $WAYBAR_DIR/colors.css)" in
    *nord.css) rm $WAYBAR_DIR/colors.css; ln -sf $WAYBAR_DIR/tokyonight.css $WAYBAR_DIR/colors.css ;;
    *tokyonight.css) rm $WAYBAR_DIR/colors.css; ln -sf $WAYBAR_DIR/nord.css $WAYBAR_DIR/colors.css ;;
esac

~/.config/waybar/launch.sh

# Wallpaper
WALLPAPER_DIR=~/Pictures/wallpaper

[[ -d $WALLPAPER_DIR ]] || echo "Cannot find wallpapers"

case "$(readlink $WALLPAPER_DIR/wallpaper.jpg)" in
    *nord.jpg) rm $WALLPAPER_DIR/wallpaper.jpg; ln -sf $WALLPAPER_DIR/tokyonight.jpg $WALLPAPER_DIR/wallpaper.jpg ;;
    *tokyonight.jpg) rm $WALLPAPER_DIR/wallpaper.jpg; ln -sf $WALLPAPER_DIR/nord.jpg $WALLPAPER_DIR/wallpaper.jpg ;;
esac

swaybg -i $WALLPAPER_DIR/wallpaper.jpg &
