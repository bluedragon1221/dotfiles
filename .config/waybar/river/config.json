{
  "layer": "top",
  "position": "top",
  "height": 36,
  "modules-left": ["river/tags"],
  "modules-center": ["river/window"],
  "modules-right": ["network", "pulseaudio", "clock", "custom/power"],
  "margin-top": 0,
  "margin-left": 0,
  "margin-right": 0,
  "margin-bottom": 0,
  "spacing": 0,
  "name": "panel",
  "mode": "dock",
  "clock": {
    "timezone": "America/Chicago",
    "interval": 60,
    "format": "{:%a, %b %d  %I:%M}",
    "max-length": 25
  },
  "network": {
    "format": "直",
    "format-ethernet": "",
    "format-wifi": "直",
    "format-linked": "",
    "format-disconnected": "睊",
    "format-disable": "",
    "tooltip-format-ethernet": "Ethernet {ifname} - IP: {ipaddr} | {bandwidthUpBits} - {bandwidthDownBits}",
    "tooltip-format-wifi": "Wifi {essid} - Strength: {signalStrength}",
    "on-click": "nm-connection-editor",
    "tooltip": false
  },
  "pulseaudio": {
    "format": "{icon}",
    "format-bluetooth": "{icon} ",
    "format-muted": "",
    "format-icons": {
      "headphone": "",
      "headset": "",
      "default": [ "墳", "奔", "婢" ]
    },
    "scroll-step": 5,
    "tooltip": false
  },
   "river/tags": {
    "num-tags": 6,
    "tag-labels": [ "1", "2", "3", "4", "5", "6" ],
    "disable-click": false
  },
  "river/window": {
    "format": "{}",
    "max-length": 60
  },
  "custom/power": {
    "format": "{}",
    "return-type": "json",
    "interval": "once",
    "signal": 1,
    "exec": "~/.config/waybar/scripts/power-river",
    "exec-if": "which rofi",
    "on-click": "~/.config/waybar/scripts/power-river toggle",
    "tooltip": false
  },
}
