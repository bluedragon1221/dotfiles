/* vim: set ft=less : */

@import "colors/tokyonight.rasi"

configuration {
	display-drun:    "";
	show-icons:      true;
}

window {
    background-color: @bg-col;
    border:           2;
    padding:          10px 6px;
    font:             "JetBrainsMono Nerd Font Medium 10";
    width:            450px;
    border-radius:    12px;
}

mainbox {
    border:  0;
    padding: 0;
}

message {
    border:       2px 0 0;
    border-color: @border-col;
    padding:      1px;
}

textbox {
    highlight:  @selected;
    text-color: @fg-col;
}

listview {
    border:       0px solid 0 0;
    padding:      2px 0 0;
    border-color: @border-col;
    spacing:      3px;
    scrollbar:    none;
}

element {
    padding: 3px 8px;
    spacing: 5px;
    border: 1px solid 0 0;
    border-color: @border-col;
}

element-icon {
    size: 1.3em;
}

element.normal.normal {
    background-color: @bg-col;
    text-color:       @fg-col;
}

element.normal.urgent {
    background-color: @bg-col;
    text-color:       @fg-col;
}

element.normal.active {
    background-color: @selected-col;
    text-color:       @fg-col;
}

element.selected {
    border-radius: 5px;
    padding: 0 10px;
}

