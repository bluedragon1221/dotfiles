element.alternate.normal {
    background-color: @bg-col;
    text-color:       @fg-col;
}

element.alternate.urgent {
    background-color: @bg-col;
    text-color:       @fg-col;
}

element.alternate.active {
    background-color: @bg-col-light;
    text-color:       @fg-col;
}

scrollbar {
    width:        4px;
    border:       0;
    handle-color: @grey;
    handle-width: 8px;
    padding:      0;
}

mode-switcher {
    border:       2px 0 0;
    border-color: @border-col;
}

inputbar {
    spacing:    0;
    text-color: @fg-col;
    padding:    4px;
    children:   [ prompt, textbox-prompt-sep, entry, case-indicator ];
}

prompt {
    background-color: @bg-col;
    border-radius: 3px;
    padding: 0px 5px;
    font-style: bold;
}

case-indicator,
entry,
prompt,
button {
    spacing:    0;
    text-color: @fg-col;
}

button.selected {
    background-color: @selected-col;
    text-color:       @fg-col;
}

textbox-prompt-sep {
    expand:     false;
    text-color: @fg-col;
    margin:     0 0.3em 0 0;
}

element-text, element-icon {
    background-color: inherit;
    text-color:       inherit;
}
