#
# wm independent hotkeys
#

# terminal emulator
super + x
	 bspc desktop -f '^2'; alacritty

super + b
	bspc desktop -f '^1'; qutebrowser

# program launcher
super + @space
	dmenu_run

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# quit/restart bspwm
super + shift + {q,r}
	bspc {quit, wm -r}

# close and kill
super + q
	bspc node -c

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# swap the current node and the biggest window
super + g
	bspc node -s biggest.window

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

#
# focus/swap
#

# focus the next/previous desktop; run workspace number script
super + {_,shift + }{Left,Right}
	bspc {desktop -f,node -d} {prev,next}; ~/.config/sxhkd/scripts/desknum.sh

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,0}'; ~/.config/sxhkd/scripts/desknum.sh



#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

super + alt + {Left,Down,Up,Right}
    STEP=20; SELECTION={1,2,3,4}; \
    bspc node -z $(echo "left -$STEP 0,bottom 0 $STEP,top 0 -$STEP,right $STEP 0" | cut -d',' -f$SELECTION) || \
    bspc node -z $(echo "right -$STEP 0,top 0 $STEP,bottom 0 -$STEP,left $STEP 0" | cut -d',' -f$SELECTION)

XF86AudioRaiseVolume
    pactl set-sink-volume 0 +5%; ~/.config/sxhkd/scripts/volperc.sh
XF86AudioLowerVolume
    pactl set-sink-volume 0 -5%; ~/.config/sxhkd/scripts/volperc.sh
XF86AudioMute
    pactl set-sink-mute 0 toggle; ~/.config/sxhkd/scripts/volperc.sh

super + z
    ~/.config/sxhkd/scripts/showtime.sh
