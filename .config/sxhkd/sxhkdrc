# switch to desktop 2; start alacritty
super + x
 wmctrl -s 1; alacritty

super + shift + x
	bspc rule -a Alacritty -o state=floating follow=on center=true rectangle=640x360+0+0 && alacritty

# switch to desktop 1; start brave
super + b
 wmctrl -s 0; brave

# switch to desktop 3; start obsidian (notes)
super + o
 wmctrl -s 2; obsidian

# switch to desktop 4; start neovide
super + n
 wmctrl -s 3; neovide

super + e
 wmctrl -s 3; emacs

# program launcher
alt + @space
 rofi -show drun

### BSPWM HOTKEYS ###

# quit/restart bspwm
super + shift + r
 bspc wm -r && pkill -USR1 -x sxhkd

super + q
 wmctrl -c :ACTIVE:

super + shift + q
 killall bspwm

# swap the current node and the biggest window
super + g
 bspc node -s biggest.window

# set the window state
super + {t,shift + t,s}
 bspc node -t {tiled,pseudo_tiled,floating}

super + f
 wmctrl -r :ACTIVE: -b toggle,fullscreen

super + {1-9,0}
 wmctrl -s {0-9}

super + shift + {1-9,0}
 wmctrl -r :ACTIVE: -t {0-9}\
 wmctrl -s {0-9}

super + alt + {Left,Down,Up,Right}
 STEP=10; SELECTION={1,2,3,4}; \
 bspc node -z $(echo "left -$STEP 0,bottom 0 $STEP,top 0 -$STEP,right $STEP 0" | cut -d',' -f$SELECTION) || \
 bspc node -z $(echo "right -$STEP 0,top 0 $STEP,bottom 0 -$STEP,left $STEP 0" | cut -d',' -f$SELECTION)

### EXTRA ###

{XF86AudioRaiseVolume, XF86AudioLowerVolume, XF86AudioMute}
 pactl set-sink-volume 0 {+5%, -5%, toggle} && dzen2-blob $(pamixer --get-volume)

shift + {XF86AudioRaiseVolume, XF86AudioLowerVolume, XF86AudioMute}
 pactl set-sink-volume 0 {+1%, -1%, toggle} && dzen2-blob $(pamixer --get-volume)

super + z
 dzen2-blob $(date +'%I:%M')

super + a
 dzen2-blob $(acpi | awk '{print $4}')

ctrl + alt + Delete
 shutdown now
