super + x
	# switch to desktop 2; spawn alacritty
	wmctrl -s 1; alacritty

super + b
	# switch to desktop 1; spawm brave
	wmctrl -s 0; brave

super + o
	# switch to desktop 3; swawn obsidian (notes)
	wmctrl -s 2; obsidian

super + n
	# switch to desktop 4; spawm neovide
	wmctrl -s 3; neovide

super + p
	killall picom; picom --config ~/.config/picom/picom.conf

super + shift + p
	killall picom; picom --config ~/.config/picom/no-transparency.conf

# program launcher
super + @space
	rofi -show combi

### BSPWM HOTKEYS ###

# quit/restart bspwm
super + {_,shift} + r
	bspc wm -r && pkill -USR1 -x sxhkd

# close and kill
super + {_,shift} + q
	bspc {node -c, quit}

# swap the current node and the biggest window
super + g
	bspc node -s biggest.window

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# focus the next/previous desktop
super + {_,shift + }{Left,Right}
	bspc {desktop -f,node -d} {prev,next} && dzen2-blob $(bspc query -D -d focused --names)

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,0}' && dzen2-blob $(bspc query -D -d focused --names)

super + alt + {Left,Down,Up,Right}
    STEP=10; SELECTION={1,2,3,4}; \
    bspc node -z $(echo "left -$STEP 0,bottom 0 $STEP,top 0 -$STEP,right $STEP 0" | cut -d',' -f$SELECTION) || \
    bspc node -z $(echo "right -$STEP 0,top 0 $STEP,bottom 0 -$STEP,left $STEP 0" | cut -d',' -f$SELECTION)

### EXTRA ###

{XF86AudioRaiseVolume, XF86AudioLowerVolume, XF86AudioMute}
    pactl set-sink-volume 0 {+5%, -5%, toggle} && dzen2-blob $(pamixer --get-volume)

shift + {XF86AudioRaiseVolume, XF86AudioLowerVolume, XF86AudioMute}
    pactl set-sink-volume 0 {+1%, -1%, toggle} && dzen2-blob $(pamixer --get-volume)


super + z
    dzen2-blob $(date +'%I:%M')

super + a
	dzen2-blob $(acpi | awk '{print $4}')

ctrl + alt + Delete
	shutdown now
