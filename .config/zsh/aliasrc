#!/bin/bash

command -v exa >/dev/null && alias ls="exa -Fa1 --icons --group-directories-first"
command -v exa >/dev/null || alias ls="ls -FA1 --color=auto"

alias sudo="doas"
alias s="doas"
alias tree="exa -T"
alias wget="curl -O -C "
alias cdtemp='cd $(mktemp -d)'
alias su="doas -s"
alias wm_test="Xephyr :5 & sleep 1 ; DISPLAY=:5 "

# typos
alias sl="ls"
alias l="ls"
alias celar="clear"
alias lcear="clear"
alias cclear="clear"
alias cleara="clear"

export EDITOR=micro

mkcd() {
  mkdir -pv "$@" && cd "$_" || exit
}

alias mkdir='mkcd'
