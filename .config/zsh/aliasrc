#!/bin/bash

#doas
alias sudo="doas"
alias s="doas"
alias su="doas -s"

#exa
alias ls="exa -a1 --icons --group-directories-first"
alias tree="exa -T"

#cd
alias cdtemp='cd $(mktemp -d)'
mkcd() {
	mkdir -pv "$@" && cd "$_" || exit
}
alias mkdir='mkcd'


alias wget="curl -O -C "
alias wm_test="Xephyr :5 & sleep 1 ; DISPLAY=:5 "
alias neofetch="pfetch"
alias cat="bat"

alias l="ls"
